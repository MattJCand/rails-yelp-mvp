<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to "Yelp Clone", restaurants_path, class: "btn btn-primary"%>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12" style="margin-top: 10%;">
      <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content, placeholder:"Very good place"%>
       <%= f.input :rating, placeholder:"5"%>
      <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>

